#:kivy 2.3.0
<PasswordchangeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 20
        size_hint: (0.9, None)
        height: self.minimum_height

        AnchorLayout:
            size_hint: (1, None)
            height: 100
            Label:
                text: 'âœ”'
                font_size: '80sp'
                color: (0.16, 0.65, 0.27, 1)  # Green color

        Label:
            text: 'Password Changed!'
            font_size: '24sp'
            bold: True
            color: (0.2, 0.2, 0.2, 1)  # Dark gray
            size_hint: (1, None)
            height: 40

        Label:
            text: 'Your password has been changed successfully.'
            font_size: '14sp'
            color: (0.42, 0.45, 0.49, 1)  # Slightly lighter gray
            size_hint: (1, None)
            height: 30

        AnchorLayout:
            size_hint: (1, None)
            height: 50
            Button:
                text: 'Back to Login'
                size_hint: (None, None)
                size: (200, 50)
                background_color: (0.2, 0.2, 0.2, 1)
                color: (1, 1, 1, 1)
                bold: True
                on_press: root.back_to_login()  # Calls the method in the Python class