<CreatanewpasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, None)
            height: 40
            Button:
                text: '<'
                size_hint: (None, None)
                size: (40, 40)
                background_color: (0, 0, 0, 1)
                on_press: root.go_back(self)
        Label:
            text: 'Create new password'
            font_size: '24sp'
            color: (0, 0, 0.5, 1)
            size_hint: (1, 0.1)
            pos_hint: {'x': 0}
            halign: 'left'
            valign: 'top'
            text_size: self.size
        Label:
            text: 'Your new password must be unique from those previously used.'
            font_size: '14sp'
            color: (0.5, 0.5, 0.5, 1)
            size_hint: (1, 0.8)
            pos_hint: {'x': 0}
            halign: 'left'
            valign: 'top'
            text_size: self.size
        TextInput:
            hint_text: 'New Password'
            multiline: False
            password: True
            size_hint: (1, None)
            height: 50
            padding_y: (10, 10)
            background_color: (0.95, 0.97, 0.98, 1)
        TextInput:
            hint_text: 'Confirm Password'
            multiline: False
            password: True
            size_hint: (1, None)
            height: 50
            padding_y: (10, 10)
            background_color: (0.95, 0.97, 0.98, 1)
        Button:
            text: 'Reset Password'
            size_hint: (1, None)
            height: 50
            font_size: '16sp'
            background_color: (0.2, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            bold: True
            on_press: root.reset_password(self)

