#:kivy 2.3.0
<ForgotpasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 10
        size_hint: (1, 1)

        # Back button
        Button:
            text: '<'
            size_hint: (None, None)
            size: (40, 40)
            pos_hint: {"x": 0, "top": 1}
            on_press: app.root.current = 'login'

        # Title
        Label:
            text: 'Forgot Password?'
            font_size: '24sp'
            color: (0, 0, 0.5, 1)
            size_hint: (1, 0.1)
            pos_hint: {'x': 0}
            halign: 'left'
            valign: 'top'
            text_size: self.size

        # Description
        Label:
            text: "Don't worry! It occurs. Please enter the email address linked with your account."
            font_size: '16sp'
            color: (0.5, 0.5, 0.5, 1)
            size_hint: (1, 0.8)
            pos_hint: {'x': 0}
            halign: 'left'
            valign: 'top'
            text_size: self.size

        # Email input
        TextInput:
            id: email_input
            hint_text: 'Enter your email'
            multiline: False
            size_hint: (1, 0.1)
            height: 50
            padding_y: (10, 10)

        # Send Code button
        Button:
            text: 'Send Code'
            size_hint: (1, None)
            height: 50
            background_color: (0, 0, 0, 1)
            color: (1, 1, 1, 1)
            on_press: root.send_code()

        # Remember Password layout
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: 40
            padding: [10, 10]
            Label:
                text: 'Remember Password?'
                font_size: '14sp'
                color: (0.5, 0.5, 0.5, 1)
                size_hint: (0.6, 1)
                halign: 'right'
            Button:
                text: 'Login'
                size_hint: (0.4, 1)
                background_color: (0, 0, 0, 0)
                color: (0, 0.5, 1, 1)
                on_press: app.root.current = 'login'

