#:kivy 2.3.0

<ManagerScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header with Tabs
        BoxLayout:
            size_hint_y: 0.10
            padding: [20, 40, 20, 0]
            spacing: 20
            Label:
                text: 'Daftar Pesanan'
                font_size: '24sp'
                bold: True
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
        
        # Tab Buttons
        BoxLayout:
            size_hint_y: 0.20
            padding: [20, 40, 20, 0]
            spacing: 20
            Button:
                text: 'Recent'
                font_size: '16sp'
                color: 0.7, 0.7, 0.7, 1
                background_normal: ''
                background_color: 0, 0, 0, 0
            Button:
                text: 'In progress'
                font_size: '16sp'
                color: 0, 0, 0, 1
                background_normal: ''
                background_color: 0, 0, 0, 0
            Button:
                text: 'Review'
                font_size: '16sp'
                color: 0.7, 0.7, 0.7, 1
                background_normal: ''
                background_color: 0, 0, 0, 0

        # List View for Pesanan Dalam Proses
        RecycleView:
            id: order_list
            viewclass: 'OrderItem'
            size_hint_y: 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            RecycleBoxLayout:
                orientation: 'vertical'
                padding: [10, 10, 10, 10]
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

        # Floating Action Button (FAB)
        FloatLayout:
            Button:
                text: '+'
                size_hint: None, None
                size: '40dp', '40dp'
                pos_hint: {'center_x': 0.9, 'center_y': 0.1}
                background_normal: ''
                background_color: 1, 0.3, 0.3, 1
                font_size: '24sp'
                color: 1, 1, 1, 1
                border: [20, 20, 20, 20]
                canvas.before:
                    Color:
                        rgba: 1, 0.3, 0.3, 1
                    Ellipse:
                        size: self.size
                        pos: self.pos

<OrderItem>:
    orientation: 'vertical'
    padding: [10, 5]
    spacing: 5
    size_hint_y: None
    height: '40dp'

    Label:
        text: root.order_name
        font_size: '16sp'
        color: 0.2, 0.2, 0.2, 1
    Label:
        text: root.order_status
        font_size: '14sp'
        color: (0, 0.5, 0, 1) if root.order_status == "In Progress" else (0.5, 0, 0, 1)
